<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oracle.s202350104.TagsMapper">
	<select id="nhTagsTotal" resultType="int">
		SELECT count(*) FROM Tags
	</select>

	<select id="nhTagsListPage" resultType="Tags" parameterType="Tags">
		SELECT * 
		FROM 
		(
			SELECT ROWNUM rn, a.*
			FROM
			(SELECT * FROM tags ORDER BY id) a
		)
		WHERE rn BETWEEN #{start} and #{end}
	</select>
	
	<select id="nhUserTagsTotal" resultType="int">
		SELECT count(*) FROM UserTags
	</select>
	
	<select id="nhUserTagsAll" resultType="Tags" parameterType="Tags">
		SELECT *
		FROM usertags u, tags t
		WHERE u.tag_id = t.id
	</select>
	
	<select id="nhBoardTagsTotal" resultType="int">
		SELECT count(*) FROM BoardTags
	</select>
	
	<select id="nhBoardTagsListPage" resultType="Tags" parameterType="Tags">
		SELECT *
		FROM 
		(
			SELECT ROWNUM rn, a.*
			FROM
			(SELECT board_id, tag_id AS id, name, b.title, cc.content AS cc_content
			 FROM boardtags bt, tags t, board b, commoncodes cc
			 WHERE bt.tag_id = t.id 
             AND   bt.board_id = b.id
             AND   b.big_code = cc.big_code
             AND   b.small_code = cc.small_code
			 GROUP BY board_id, tag_id, name, b.title, cc.content
			 ORDER BY board_id, tag_id) a
		)
		WHERE rn BETWEEN #{start} and #{end}
	</select>
	
	<select id="nhBoardTagsList" resultType="Tags" parameterType="int">
		SELECT *
		FROM  BoardTags bt, Tags t, Board b
		WHERE bt.tag_id = t.id
		AND   bt.board_id = b.id
		AND   b.small_code = #{smallCode}
		ORDER BY t.name
	</select>
	
	<select id="nhContentTagsTotal" resultType="int">
		SELECT count(*) FROM ContentTags
	</select>
	
	<select id="nhContentTagsList" resultType="Tags" parameterType="int">	
		SELECT *
		FROM ContentTags ct, Tags t 
		WHERE ct.tag_id = t.id
	</select>
	
	<select id="nhTagsListAll" resultType="Tags">
		SELECT * FROM Tags
	</select>
	
	<insert id="nhTagsInsert" parameterType="Tags">
		INSERT INTO Tags(id, name) VALUES(tags_id_seq.NEXTVAL, #{name})
	</insert>
	
	<select id="nhTagsSelect" parameterType="int" resultType="Tags">
		SELECT * FROM Tags WHERE id = #{id}
	</select>
	
	<update id="nhTagsUpdate" parameterType="Tags">
		UPDATE Tags SET name = #{name} WHERE id = #{id}
	</update>
	
	<!-- 자식 테이블 데이터부터 삭제할 수 있도록 -->
	<delete id="nhTagsDelete" parameterType="int">
		DELETE Tags WHERE id = #{id}
	</delete>
	
	<delete id="nhUserTagsDelete" parameterType="int">
		DELETE UserTags WHERE tag_id = #{id}
	</delete>
	
	<delete id="nhContentTagsDelete" parameterType="int">
		DELETE ContentTags WHERE tag_id = #{id}
	</delete>
	
	<delete id="nhBoardTagsDelete" parameterType="int">
		DELETE BoardTags WHERE tag_id = #{id}
	</delete>
	
	<select id="nhContentTagsSearch" parameterType="int" resultType="Tags">
		SELECT * FROM ContentTags WHERE content_id = #{contentId}
	</select>
</mapper>