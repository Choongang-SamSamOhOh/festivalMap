<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.oracle.s202350104.TagsMapper">
	<select id="nhTagsTotal" resultType="int" parameterType="Tags">
		SELECT count(*) FROM Tags
		WHERE 1=1
		<if test="keyword != null and keyword != ''">
			AND name like '%' || #{keyword} || '%'
		</if>
	</select>
	
	<select id="nhTagsListAll" resultType="Tags" parameterType="Tags">
		SELECT * 
		FROM 
		(
			SELECT ROWNUM rn, a.*
			FROM
			(SELECT * FROM tags 
			 WHERE 1=1
			 <if test="keyword != null and keyword != ''">
				AND name like '%' || #{keyword} || '%'
			 </if>
			 ORDER BY id) a
		)
		<if test="start != 0 and end != 0">
			WHERE rn BETWEEN #{start} and #{end}
		</if>
	</select>
	
	<select id="nhUserTagsTotal">
		SELECT count(*)
		FROM
		users u, usertags ut, tags t
		WHERE ut.tag_id = t.id
		AND   ut.user_id = u.id
		AND   u.small_code = 2
		<if test="keyword != null and keyword != ''">
			<choose>
			 	<when test="search == 'tagname'">
			 		AND t.name like '%' || #{keyword} || '%'
			 	</when>
			 	<when test="search == 'email'">
			 		AND u.id like '%' || #{keyword} || '%' 
			 	</when>
			</choose>
	  	</if>
	</select>
	
	<select id="nhUserTagsAll" resultType="Tags">
		SELECT *
		FROM usertags u, tags t
		WHERE u.tag_id = t.id
		ORDER BY t.name
	</select>
	
